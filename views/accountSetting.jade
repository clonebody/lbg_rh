extends layout

block head
  title 设置

block navTitle
  .mui-title 设置

block content
  -var isAdmin = ("admin" in account) && account.admin
  if isAdmin
    ul.mui-table-view.mui-table-view-chevron
      li.mui-table-view-cell.mui-media
        a.mui-navigate-right(href="/console")
          .mui-media-body 控制台
  .mui-content-padded
    button#tableList.mui-btn.mui-btn-block.mui-btn-danger 退出

block script
  script.
    document.getElementById('tableList').addEventListener("tap", function(event) {
      location="/account/logout"
    });